<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        android:id="@+id/bottom_layout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message_edit_text"
            android:layout_alignParentBottom="true"
            android:hint="@string/how_are_you_doing_hint"
            android:padding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="70dp"
            android:autofillHints="no"
            android:inputType="textMultiLine"
            android:background="@drawable/rounded_corner"
            android:maxLines="6"
            tools:ignore="TextFieldSize"
            />
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/send_button"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/message_edit_text"
            android:padding="6dp"
            android:paddingStart="2dp"
            android:paddingEnd="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3.5dp"
            android:src="@drawable/baseline_send_24"
            android:background="@drawable/send_background"
            android:contentDescription="@string/description_send_button"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>