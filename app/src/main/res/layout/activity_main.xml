<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/message_edit_text"
        />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_placeholder"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="28sp"
        />

    <EditText
        android:id="@+id/message_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autofillHints="no"
        android:background="@drawable/rounded_corner"
        android:hint="@string/write_me_hint"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:padding="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="70dp"
        />

    <ImageButton
        android:id="@+id/send_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3.5dp"
        app:layout_constraintEnd_toEndOf="@+id/message_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/message_edit_text"
        android:background="@drawable/send_background"
        android:contentDescription="@string/description_send_button"
        android:padding="6dp"
        android:paddingStart="2dp"
        android:paddingEnd="0dp"
        android:src="@drawable/baseline_send_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>